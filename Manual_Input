#Package Update
sudo apt update
sudo apt upgrade -y

#Download
wget https://github.com/keloud/irohaboard_InstallScript/archive/master.tar.gz

#Extract
tar xvf master.tar.gz

#Change Current Directory
cd irohaBoard_InstallScript

#Please enter the password you set.
nano irohaBoard_Installer_MySQL.cnf

#Add authority.
chmod 777 irohaBoard_Installer.sh

#Start installation
sudo ./irohaBoard_Installer.sh
