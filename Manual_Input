#Package Update
sudo apt update
sudo apt upgrade -y

#Download
wget https://github.com/keloud/irohaBoard_InstallScript/archive/1.0.0.tar.gz

#Extract
tar xvf 1.0.0.tar.gz

#Please enter the password you set.
nano irohaBoard_Installer_MySQL.cnf

#Add authority.
chmod 777 irohaBoard_Installer.sh

#Start installation
sudo ./irohaBoard_Installer.sh